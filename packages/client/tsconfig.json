{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*.json",
      ],
      "@src/*": [
        "./src/*",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}